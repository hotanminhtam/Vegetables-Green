
@{
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <link href="~/Assert/assert2/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Assert/assert2/css/style.css" rel="stylesheet" />
    <link href="~/Assert/assert2/vendor/owl-slider.css" rel="stylesheet" />
    <link href="~/Assert/assert2/vendor/settings.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Assert/assert2/images/favicon.png" />
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,500,700,300' rel='stylesheet' type='text/css'>
    <script src="~/Assert/assert2/js/jquery-3.2.0.min.js"></script>
    <title>Check out</title>
</head>
<body>
    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content popup-search">
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i></button>
                <div class="modal-body">
                    <div class="input-group">
                        <input type="text" class="form-control control-search" placeholder="Tìm kiếm...">
                        <button class="button_search" type="button">Tìm kiếm</button>
                    </div><!-- /input-group -->

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
    <!-- End pushmenu -->
    <div class="wrappage">
        <header id="header" class="header-v3 header-v2">
            <div id="topbar" class="topbar-ver2">
                <div class="container container-ver2">
                    <div class="inner-topbar box">
                        <div class="float-left">
                            <p><img src="~/Assert/assert2/images/icon-phone-header.png.png" alt="icon"> HOTLINE <span> 090-123-4567</span></p>
                        </div>
                        <div class="float-right align-right">
                            <div class="hover-menu">
                                <a class="acc" href="#" title="user"><img src="~/Assert/assert2/images/icon-user-header.png" alt="icon">TÀI KHOẢN</a>
                                <ul class="list-menu">
                                    <li><a href="#" title="USD">Đăng nhập</a></li>
                                    <li><a href="#" title="VND">Đăng ký</a></li>
                                </ul>
                            </div>
                            <!-- End hover-menu -->
                        </div>
                    </div>
                </div>
                <!-- End container -->
            </div>
            <!-- End topbar -->
            <div class="header-top">
                <div class="container container-ver2">
                    <div class="box">
                        <p class="icon-menu-mobile"><i class="fa fa-bars"></i></p>
                        <div class="logo">
                            <a href="#" title="Uno">
                                <img src="~/Assert/assert2/images/banner/logo_mini.jpg" alt="logo">
                            </a>
                        </div>
                        <div class="logo-mobile">
                            <a href="#" title="Xanadu"><img src="~/Assert/assert2/images/logo-v2.png" alt="Xanadu-Logo"></a>
                        </div>

                        <div class="box-right">
                            <div class="cart hover-menu">
                                <p class="icon-cart" title="Giỏ hàng">
                                    <i class="icon"></i>
                                    <span class="cart-count">0</span>
                                </p>
                                <div class="cart-list list-menu">
                                    <ul class="list">
                                        <li>
                                            <a href="#" title="" class="cart-product-image"><img src="#" alt="Sản phẩm"></a>
                                            <div class="text">
                                                <p class="product-name">ABC</p>
                                                <p class="product-price"><span class="price">0</span></p>
                                                <p class="qty">Số lượng:00</p>
                                            </div>
                                            <a class="close" href="#" title="close"><i class="fa fa-times-circle"></i></a>
                                        </li>
                                    </ul>
                                    <p class="total"><span class="left">Tổng cộng:</span> <span class="right">0</span></p>
                                    <div class="bottom">
                                        <a class="link-v1" href="@Url.Action("ShoppingCart", "Cart")" title="Giỏ hàng">Xem giỏ hàng</a>
                                        <a class="link-v1 rt" href="#" title="Thanh toán">Thanh toán</a>
                                    </div>
                                </div>
                            </div>
                            <div class="search dropdown" data-toggle="modal" data-target=".bs-example-modal-lg">
                                <i class="icon"></i>
                            </div>
                        </div>
                        <nav class="mega-menu">
                            <!-- Brand and toggle get grouped for better mobile display -->
                            <ul class="nav navbar-nav" id="navbar">
                                <li class="level1"><a href="@Url.Action("Home", "Home")" title="Trang chủ">Trang chủ</a></li>
                                <li class="level1"><a href="@Url.Action("About", "About")" title="About us">Thông tin</a></li>
                                <li class="level1 dropdown">
                                    <a href="#" title="men">Thực phẩm</a>
                                    <div class="sub-menu sub-menu-v2 dropdown-menu">
                                        <ul class="menu-level-1">
                                            <li class="level2"><a href="#">Rau-Củ-Quả</a></li>
                                            <li class="level2"><a href="#">Trái cây</a></li>
                                            <li class="level2"><a href="#">Thịt-Cá</a></li>
                                            <li class="level2"><a href="#">Đồ khô</a></li>
                                            <li class="level2"><a href="#">Gia vị</a></li>
                                        </ul>
                                        <!-- End RightSubMenu -->
                                    </div>
                                    <!-- End Dropdow Menu -->
                                </li>
                                <li class="level1"><a href="#" title="Lịch sử">Lịch sử</a></li>
                                <li class="level1"><a href="@Url.Action("Contact", "Contact")" title="Liên hệ">Liên hệ</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <!-- End container -->
            </div>
            <!-- End header-top -->
        </header><!-- /header -->

        <div class="main-content">
            <div class="container">
                <div class="banner-header banner-lbook3 space-30">
                    <img src="~/Assert/assert2/images/banner/banner_logo.jpg" alt="Banner-header">
                    <div class="text">
                        <h3 style="color: #33CC99 ">Về chúng tôi</h3>
                        <p style="color:red"><a href="@Url.Action("Home", "Home")" style="color:red" title="Trang chủ">Trang chủ</a><i class="fa fa-caret-right"></i>Thanh toán</p>
                    </div>
                </div>
            </div>
            <div class="container container-ver2 space-padding-tb-30">
                <div class="row head-cart">
                    <div class="col-md-4 space-30">
                        <div class="item active center">
                            <p class="icon">01</p>
                            <h3>Giỏ hàng</h3>
                        </div>
                    </div>
                    <!-- End col-md-4 -->
                    <div class="col-md-4 space-30">
                        <div class="item active center">
                            <p class="icon">02</p>
                            <h3>Thanh toán</h3>
                        </div>
                    </div>
                    <!-- End col-md-4 -->
                    <div class="col-md-4 space-30">
                        <div class="item center">
                            <p class="icon">03</p>
                            <h3>Hoàn tất</h3>
                        </div>
                    </div>
                    <!-- End col-md-4 -->
                </div>
            </div>
            <!-- End container -->
            <div class="cart-box-container check-out">
                <div class="container container-ver2">
                    <div class="row">
                        <div class="col-md-6">
                            <h3 class="title-brand">Thông tin khách hàng</h3>
                            <form class="form-horizontal">
                                <div class="form-group col-md-6">
                                    <label for="inputfname" class=" control-label">Họ<span class="color">*</span></label>
                                    <input type="text" placeholder="Nhập họ..." id="inputfname" class="form-control">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputlname" class=" control-label">Tên<span class="color">*</span></label>
                                    <input type="text" placeholder="Nhập tên..." id="inputlname" class="form-control">
                                </div>
                                <div>
                                    <div class="form-group col-md-6">
                                        <label for="inputemail" class=" control-label">Email<span class="color">*</span></label>
                                        <input type="text" placeholder="Nhập email..." id="inputemail" class="form-control">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputphone" class=" control-label">Số điện thoại<span class="color">*</span></label>
                                        <input type="text" placeholder="Nhập số điện thoại..." id="inputphone" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputstreet" class=" control-label">Địa chỉ<span class="color">*</span></label>
                                    <input type="text" placeholder="Nhập địa chỉ..." id="inputstreet" class="form-control space-20">
                                </div>
                                <div class="form-group">
                                    <label for="inputcountry" class=" control-label">Tỉnh/Thành phố<span class="color">*</span></label>
                                    <input type="text" placeholder="Nhập Tỉnh/Thành phố..." id="inputcountry" class="form-control space-20">
                                </div>
                            </form>


                        </div>
                        <!-- End col-md-8 -->
                        <div class="col-md-6 space-30">
                            <div class="box">
                                <h3 class="title-brand">Đơn hàng</h3>
                                <div class="info-order">
                                    <div class="product-name">
                                        <ul>
                                            <li class="head">
                                                <span class="name">Tên sản phẩm</span>
                                                <span class="qty"><b>Số lượng</b></span>
                                                <span class="total"><b>Tổng cộng</b></span>
                                            </li>
                                            <li>
                                                <span class="name">Modern Chair</span>
                                                <span class="qty">01</span>
                                                <span class="total">$520.00</span>
                                            </li>
                                        </ul>
                                    </div>
                                    <!-- End product-name -->
                                    <ul class="product-order">
                                        <li>
                                            <span class="left">Tổng cộng</span>
                                            <span class="right">0 VNĐ</span>
                                        </li>
                                        <li>
                                            <span class="left">SHIPPING & HANDLING</span>
                                            <span class="right">Free Shipping</span>
                                        </li>
                                        <li>
                                            <span class="left">Thành tiền</span>
                                            <span class="right brand">0 VNĐ</span>
                                        </li>
                                    </ul>
                                </div>
                                <!-- End info-order -->
                                <div class="payment-order box float-left">
                                    <h3 class="title-brand">Hình thức thanh toán</h3>
                                    <ul class="tabs">
                                        <li>
                                            <i class="icon"></i>
                                            <h4>Thanh toán khi nhận hàng</h4>

                                        </li>
                                        <li>
                                            <i class="icon"></i>
                                            <h4>PayPal</h4>
                                        </li>
                                    </ul>
                                </div>
                                <a class="link-v1 box lh-50 rt full" href="@Url.Action("Order", "Cart")" title="PLACE ORDER">Xác nhận thanh toán</a>
                            </div>
                        </div>
                    </div>
                    <!-- End row -->
                </div>
                <!-- End container -->
            </div>
            <!-- End cat-box-container -->
        </div>
        <footer id="footer" class="footer-v3 align-left">
            <div class="container container-ver2">
                <div class="footer-inner">
                    <div class="row">
                        <div class="col-md-3 col-sm-6">
                            <h3 class="title-footer">Về chúng tôi</h3>
                            <p>Với sứ mệnh đem đến những loại những phẩm ngon, bổ, rẻ và đảm bảo an toàn vệ sinh thực phẩm đến tay người tiêu dùng...</p>
                            <a class="link-footer" href="#" title="footer">Xem thêm <i class="fa fa-long-arrow-right"></i></a>
                        </div>
                        <div class="col-md-2 col-sm-6">
                            <h3 class="title-footer">Thông tin</h3>
                            <ul class="list-footer">
                                <li><a href="#" title="title">Điều khoản</a></li>
                                <li><a href="#" title="title">Về chúng tôi</a></li>
                                <li><a href="#" title="title">Bảo mật thanh toán</a></li>
                            </ul>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <h3 class="title-footer">Liên kết</h3>
                            <div class="social space-30">
                                <a href="#" title="t"><i class="fa fa-twitter"></i></a>
                                <a href="#" title="f"><i class="fa fa-facebook"></i></a>
                                <a href="#" title="y"><i class="fa fa-youtube-play"></i></a>
                                <a href="#" title="g"><i class="fa fa-google"></i></a>
                            </div>
                            <h3 class="title-footer">Loại thanh toán</h3>
                            <a href="#" title="paypal"><img src="~/Assert/assert2/images/paypal-footer.png" alt="images"></a>
                        </div>
                        <div class="col-md-4 col-sm-6">
                            <h3 class="title-footer">Phản hồi</h3>
                            <div class="subscribe">
                                <form action="#" method="get" accept-charset="utf-8">
                                    <input type="text" onblur="if (this.value == '') {this.value = 'Enter Your Email Address';}" onfocus="if(this.value != '') {this.value = '';}" value="Enter Your Email Address" class="input-text required-entry validate-email" title="Sign up for our newsletter" id="newsletter" name="email">
                                    <button class="button button1 hover-white" title="Subscribe" type="submit">Gửi yêu cầu<i class="fa fa-long-arrow-right"></i></button>
                                </form>
                            </div>
                            <!-- End subscribe -->
                        </div>
                    </div>
                    <!-- End row -->
                </div>
                <!-- End footer-inner -->
            </div>
            <!-- End container -->
            <div class="footer-bottom box">
                <div class="container container-ver2">
                    <div class="box bottom">
                        <p class="float-left">Copyright &copy;2016 Fresh Food - All Rights Reserved.</p>
                        <div class="float-right">
                            <ul class="menu-bottom-footer">
                                <li><a href="#" title="Contact Us">Liên hệ</a></li>
                                <li><a href="#" title="Term of Use">Điều khoản sử dụng</a></li>
                                <li><a href="#" title="Privacy Policy">Chính sách bảo mật</a></li>
                                <li><a href="#" title="Site Map">Bản đồ</a></li>
                            </ul>
                            <div class="language">
                                <span>Ngôn ngữ:</span>
                                <div class="hover-menu">
                                    <p>EN <i class="fa fa-angle-down"></i></p>
                                    <div class="list-menu">
                                        <ul>
                                            <li><a href="#" title="EN">EN</a></li>
                                            <li><a href="#" title="VN">VN</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <span>Giá:</span>
                                <div class="hover-menu">
                                    <p>USD <i class="fa fa-angle-down"></i></p>
                                    <div class="list-menu">
                                        <ul>
                                            <li><a href="#" title="USD">USD</a></li>
                                            <li><a href="#" title="VND">VND</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- End language -->
                        </div>
                    </div>
                </div>
                <!-- End container -->
            </div>
        </footer>
    </div>
    <!-- End wrappage -->


    <script src="~/Assert/assert2/js/bootstrap.min.js"></script>
    <script src="~/Assert/assert2/js/owl.carousel.min.js"></script>
    <script src="~/Assert/assert2/js/engo-plugins.js"></script>
    <script src="~/Assert/assert2/js/jquery.mousewheel.min.js"></script>
    <script src="~/Assert/assert2/js/slick.min.js"></script>
    <script src="~/Assert/assert2/js/jquery.zoom.js"></script>
    <script src="~/Assert/assert2/js/store.js"></script>
</body>

</html>